                android:text="@string/text_item_brand_street"
                android:textColor="@color/color_font_666"
                android:textSize="@dimen/textSizeNormal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_menu_order_layout"
            android:layout_width="match_parent"
